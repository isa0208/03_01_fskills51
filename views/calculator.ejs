<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/header2.ejs') %>
    
    <title>Training Budget Calculator</title>

<body>
    <%- include('partials/navbar2.ejs') %>
    <main>
      <h1>Budget Calculator</h1>
      <div class="container mt-5 mb-5">
        <form id="calorie-counter">
          <label for="budget">Training Budget in Baht</label>
          <input
            type="number"
            min="0"
            id="budget"
            placeholder="Enter budget for training"
            required
          />
          <fieldset id="breakfast">
            <legend>Total Group Classes</legend>
            <div class="input-container"></div>
          </fieldset>
          <fieldset id="lunch">
            <legend>Total One Day Workshops</legend>
            <div class="input-container"></div>
          </fieldset>
          <fieldset id="dinner">
            <legend>Total Private Classes</legend>
            <div class="input-container"></div>
          </fieldset>
          <fieldset id="snacks">
            <legend>Personal Gear</legend>
            <div class="input-container"></div>
          </fieldset>
          <fieldset id="exercise">
            <legend>Accommodation</legend>
            <div class="input-container"></div>
          </fieldset>
          <div class="controls">
            <span>
              <label for="entry-dropdown">Add classes or items:</label>
              <select id="entry-dropdown" name="options">
                <option value="breakfast" selected>Group Classes</option>
                <option value="lunch">One Day Workshops</option>
                <option value="dinner">Private Classes</option>
                <option value="snacks">Personal Gear</option>
                <option value="exercise">Accommodation</option>
              </select>
              <button type="button" id="add-entry">Add Entry</button>
            </span>
          </div>
          <div>
            <button type="submit">
              Calculate Remaining Budget
            </button>
            <button type="button" id="clear">Clear</button>
          </div>
        </form>
        <div id="output" class="output hide"></div>
      </div>
    </main>
  </body>
  <script src="/public/script.js"></script>
</html>